<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ShoppingHistoryFragment">

    <RelativeLayout
        android:id="@+id/shopping_history_list_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/shopping_history_list_vertical_margin"
        android:layout_marginTop="@dimen/shopping_history_list_vertical_margin"
        android:layout_marginEnd="@dimen/shopping_history_list_horizontal_margin"
        android:layout_marginStart="@dimen/shopping_history_list_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shopping_history_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:scrollbars="vertical" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>